<div class="mx-auto md:w-2/3 w-full">
  <%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>
    <div>
      <h1 class="font-bold text-4xl">Agregar producto</h1>
      <div class="my-5">
        <%= form.label :title, 'Titulo' %>
        <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="my-5">
        <%= form.label :description, 'Descripcion' %>
        <%= form.text_area :description, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="my-5">
        <%= form.label :price, 'Precio' %>
        <%= form.number_field :price, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="my-5">
        <%= form.label :category, 'Categoria' %>
        <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name %>
      </div>

      <div class="my-5">
        <%= form.label :tag, 'TAGS' %>
        <%= form.collection_check_boxes :tags, Tag.all.order(name: :asc), :id, :name, { :include_hidden => false }, { multiple: true } do |b| %>
          <%= b.label class:"mx-1 font-thin" do%>
            <%=b.check_box + b.text%>
          <%end%>
        <% end %>
      </div>

      <div class="my-5">
        <%= form.label :photos, 'Fotos' %>
        <%= form.file_field :photos, multiple: true %>
      </div>
    </div>
    <%= form.submit 'Crear producto', class: "rounded-lg py-3 px-5 bg-fuchsia-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to 'Regresar al Home', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>