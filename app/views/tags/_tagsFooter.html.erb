<section class="grid grid-cols-2 md:flex md:justify-center gap-4 p-4">
  <% @tag.each do |tag| %>
    <%= link_to tag_path(tag.id), class:"tag",id: dom_id(tag) do %>
      <%= image_tag tag&.photo, class: "clip-square md:h-48 md:max-w-full" if tag.photo.attached? %>
    <% end %>
  <% end %>
</section>