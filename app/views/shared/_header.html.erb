<header class="bg-theme h-24">
  <nav class="grid h-24 grid-cols-[1fr_3fr_repeat(2,1fr)] sm:grid-cols-12 content-center items-center place-items-center" aria-label="Global" data-controller="menu">
    <button class="sm:hidden" data-action="click->menu#toggle"> <%= image_tag asset_path('icons/sandwichMenu.svg'), width: 42, height: 42 %> </button>

    <%= link_to root_path, class: " sm:col-span-3" do %>
      <%= image_tag asset_path('ekisukiLogo.png'), class: 'max-h-24 max-w-full' %>
    <% end %>
    <!--    MENU MOBILE-->
    <div class="sm:hidden absolute bg-white top-0 left-0 shadow z-10 h-3/4 flex flex-col min-w-[100%]  ease-in-out duration-500 p-5 rounded-r-3xl -translate-x-full" data-menu-target="items">
      <button class="mb-2 text-left text-6xl text-theme" data-action="click->menu#toggle">&times;</button>
      <label class="relative block shadow-lg ring-2 ring-theme rounded-xl">
        <span class="sr-only">Buscar</span>
        <span class="absolute inset-y-0 right-0 flex items-center pr-2">
          <%= image_tag 'icons/searchIcon.svg', class: 'h-5 w-5 fill-slate-300', width: 42, height: 42 %>
        </span>
        <input class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-transparent rounded-3xl py-2 pl-3 pr-9 focus:outline-none focus:border-transparent focus:ring-transparent focus:ring-1 sm:text-sm " placeholder="Busca tu producto aqui" type="text" name="search"/>
      </label>

      <section class="flex items-center justify-center my-8 gap-8">
        <%= image_tag 'icons/whatsappIcon.svg', width: 42, height: 42 %>
        <%= image_tag 'icons/instagramIcon.svg', width: 42, height: 42 %>
        <%= image_tag 'icons/facebookIcon.svg', width: 42, height: 42 %>
      </section>
    </div>

    <div class="hidden sm:block sm:col-span-6 sm:w-11/12 md:w-3/5">
      <label class="relative block">
        <span class="sr-only">Buscar</span>
        <span class="absolute inset-y-0 right-0 flex items-center pr-2">
          <%= image_tag 'icons/searchIcon.svg', class: 'h-5 w-5 fill-slate-300', width: 42, height: 42 %>
        </span>
        <input class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-transparent rounded-3xl py-2 pl-3 pr-9 shadow-sm focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm " placeholder="Busca tu producto aqui" type="text" name="search"/>
      </label>
    </div>
    <% if Current.user.present? %>
      <%= button_to logout_path,class:'justify-self-end ml-2 mt-1 mr-0', method: :delete do %>
        <%= image_tag 'icons/salirIcon.svg', width: 42, height: 42 %>
      <% end %>
    <% else %>
      <%= link_to new_session_path ,class:'justify-self-end' do %>
        <%= image_tag 'icons/loginIcon.svg', width: 42, height: 42 %>
      <% end %>
    <% end %>
    <%= image_tag 'icons/saleIcon.svg', class: 'hidden sm:block', width: 42, height: 42 %>
    <%= link_to carts_path, class: 'justify-self-start' do %>
      <%= image_tag 'icons/cartIcon.svg', width: 42, height: 42 %>
    <% end %>
  </nav>
</header>