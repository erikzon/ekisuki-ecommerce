<header class="bg-white">
  <nav class="mx-auto grid grid-cols-4 items-center justify-between p-4 px-8 bg-fuchsia-300" aria-label="Global">
    <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
      <%= image_tag asset_path('ekisukiLogo.png'), class: 'h-24' %>
    <% end %>
    <div class="col-span-2">
      <label class="relative block">
        <span class="sr-only">Search</span>
        <span class="absolute inset-y-0 right-0 flex items-center pr-2">
          <%= image_tag 'icons/searchIcon.svg', class:'h-5 w-5 fill-slate-300', width: 43, height: 43 %>
        </span>
        <input class="placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-transparent rounded-3xl py-2 pl-3 pr-9 shadow-sm focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm " placeholder="Busca tu producto aqui" type="text" name="search"/>
      </label>
    </div>
    <div class="flex justify-center gap-4">
      <% if Current.user.present? %>
        <%= button_to logout_path, method: :delete do %>
          <%= image_tag 'icons/salirIcon.svg', width: 42, height: 42 %>
        <% end %>
      <% else %>
        <%= link_to new_session_path do %>
          <%= image_tag 'icons/loginIcon.svg', width: 42, height: 42 %>
        <% end %>
      <% end %>
      <%= image_tag 'icons/saleIcon.svg', width: 42, height: 42 %>
      <%= link_to (Current.user.present? ? carts_path : new_session_path) do %>
        <%= image_tag 'icons/cartIcon.svg', width: 42, height: 42 %>
      <% end %>
    </div>
  </nav>
</header>