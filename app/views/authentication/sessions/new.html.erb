<div class="bg-theme p-4 mx-4 my-8 text-theme rounded-lg">
  <%= form_with(url: sessions_path) do |form| %>
    <div class="flex flex-col">
      <%= form.label :login, 'Correo o nombre de usuario', class: 'text-center' %>
      <div class="flex gap-4">
        <%= image_tag 'icons/emailLogin.svg' %>
        <%= form.text_field :login, class: "placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-transparent rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm" %>
      </div>
    </div>

    <div class="flex flex-col text-center mt-4">
      <%= form.label :password, 'ContraseÃ±a' %>
      <div class="flex gap-4">
        <%= image_tag 'icons/passwordLogin.svg' %>
        <%= form.password_field :password, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border border-transparent rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm' %>
      </div>
    </div>

    <div class="flex justify-center mt-4 mb-1 p-4">
      <%= form.submit 'Iniciar Sesion', class: 'px-6 py-3 rounded-xl drop-shadow-xl bg-white' %>
    </div>

    <div>
      <h2>No tienes cuenta? Registrate <%= link_to new_user_path, class: 'text-fuchsia-600' do %>
          Aqui.
        <% end %></h2>
    </div>
  <% end %>
</div>
<%= render 'categories/categoriesCircles' %>