<div class="bg-white px-6 text-theme">
  <h1 class="font-bold text-2xl mt-4">Datos de entrega</h1>
  <%= form_with(model: order, class: "contents") do |form| %>
    <% if order.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
        <ul>
          <% order.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5 flex flex-col gap-4">
      <div class="flex align-center items-center gap-2">
        <%= image_tag 'icons/orderForm/name.svg', class: 'w-8' %>
        <%= form.label :name, 'Nombre de persona que recibe' %>
      </div>
      <%= form.text_field :name, value: @last_order_name, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border-2 border-theme rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm' %>
    </div>
    <div class="my-5 flex flex-col gap-4">
      <div class="flex align-center items-center gap-2">
        <%= image_tag 'icons/orderForm/phone.svg', class: 'w-8' %>
        <%= form.label :phone_number, 'Teléfono' %>
      </div>
      <%= form.text_field :phone_number, value: @last_order_phone_number, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border-2 border-theme rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm'  %>
    </div>
    <div class="my-5 flex flex-col gap-4">
      <div class="flex align-center items-center gap-2">
        <%= image_tag 'icons/orderForm/mail.svg', class: 'w-8' %>
        <%= form.label :email, 'Correo' %>
      </div>
      <%= form.email_field :email, value: @last_order_email, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border-2 border-theme rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm'  %>
    </div>
    <div class="my-5 flex flex-col gap-4">
      <div class="flex align-center items-center gap-2">
        <%= image_tag 'icons/orderForm/addres.svg', class: 'w-8' %>
        <%= form.label :shipping_address, 'Direccion de entrega' %>
      </div>
      <%= form.text_field :shipping_address, value: @last_order_shipping_address, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border-2 border-theme rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm'  %>
    </div>
    <div class="my-5 flex flex-col gap-4">
      <div class="flex align-center items-center gap-2">
        <%= image_tag 'icons/orderForm/notes.svg', class: 'w-8' %>
        <%= form.label :note, 'Datos de entrega adicionales' %>
      </div>
      <%= form.text_area :note, value: @last_order_note, class: 'placeholder:italic placeholder:text-slate-400 block bg-white w-full border-2 border-theme rounded-xl py-2 pl-3 pr-9 shadow-lg focus:outline-none focus:border-fuchsia-500 focus:ring-fuchsia-500 focus:ring-1 sm:text-sm'  %>
    </div>
    <div class="flex justify-center mt-4 mb-1 p-4">
      <%= form.submit 'Ordernar ✅', class: 'px-6 py-3 rounded-xl drop-shadow-lg bg-theme' %>
    </div>
  <% end %>
</div>